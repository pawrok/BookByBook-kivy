            root.set_rating(4)
        Image:
            allow_stretch: True
            size: fourth_s.size
            source: 'images/star.png'
            pos: fourth_s.pos

# ----------------------- home screens ------------------------- #

<MiddleScreenManager@ScreenManager>:
    id: middlemanager
    books_screen: books_screen
    transition: NoTransition()
    Books:
        id: books_screen
    Shelves:
    Tags:

<Books@Screen>:
    name: 'book'
    id: books_screen
    book_scroll: book_scroll

    BoxLayout:
        orientation: 'vertical'
        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            size_hint_y: None
            height: '4dp'

        BoxLayout:
            orientation: 'vertical'

            BoxLayout:
                size_hint_y: None
                height: '40dp'
                padding: 5, 5

                BoxLayout:
                    # padding: '2dp', '1dp', '2dp', '2dp'
                    # canvas.before:
                    #     Color:
                    #         rgba: 1, 1, 1, 1
                    #     Rectangle:
                    #         pos: self.pos
                    #         size: self.size

                    Label:
                        size_hint_x: None
                        width: '5dp'                 
                    
                    BoxLayout:
                        canvas.after:
                            Color:
                                rgb: 0, 0, 0, 1
                            Line:
                                points: self.pos[0] , self.pos[1], self.pos[0] + self.size[0] * 0.75, self.pos[1]
                                # width: 2
                        Label:
                            size_hint_x: None
                            width: '5dp'

                        TextInput:
                            id: search_input
                            multiline: False
                            padding: 0, 4
                            size_hint_x: 0.75
                            background_normal: ''
                            background_active: ''
                            background_disabled_normal: ''
                            background_color: 1, 1, 1, 1
                            font_size: 15
                            foreground_color: 0, 0, 0, 1
                            hint_text: 'Search'

                            # canvas.before:
                            #     Color:
                            #         rgb: 0.3, 0.3, 0.3, 1

                        Button:
                            id: search_btn
                            size_hint_x: 0.08
                            background_normal: ''
                            background_color: 1, 1, 1, 0
                            on_press: root.parent.ids.books_screen.ids.book_scroll.search_title(search_input.text)
                            
                            Image:
                                allow_stretch: True
                                size: search_btn.width * 0.9, search_btn.height * 0.9
                                source: 'images/search.png'
                                # pos: search_btn.x + search_btn.size[0] * 0.3, search_btn.y + search_btn.size[1] * 0.15
                                pos: search_btn.x, search_btn.y
                        
                        Button:
                            id: sort_btn
                            background_normal: ''
                            background_color: 1, 1, 1, 0
                            size_hint_x: 0.12
                            
                            Image:
                                allow_stretch: True
                                size: sort_btn.width * 0.8, sort_btn.height * 0.8
                                source: 'images/sort.png'
                                pos: sort_btn.x + sort_btn.size[0] * 0.2, sort_btn.y + sort_btn.size[1] * 0.1
                        
                        Label:
                            size_hint_x: None
                            width: '5dp'

            BoxLayout:
                padding: 10
                canvas:
                    Color:
                        rgb: 1, 1, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size

                ScrollView:
                    BookGridLayout:
                        id: book_scroll
                        col_default_width: self.width / 3
                        cols: 3
                        size_hint_y: None
                        # height: 100

<Shelves@Screen>:
    name: 'shelf'
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'

        Label:
            size_hint_y: None
            height: '4dp'

        BoxLayout:
            size_hint_y: None
            height: '40dp'
            padding: 5, 5
            # canvas.after:
            #     Color:
            #         rgb: utils.get_color_from_hex('#28527a')
            #     Line:
            #         rectangle: self.x, self.y, self.width, self.height
            #         joint: 'miter'
            #         cap: 'none'

            Label:
                size_hint_x: None
                width: '5dp'                 

            BoxLayout:
                canvas.after:
                    Color:
                        rgb: utils.get_color_from_hex('#000000')
                    Line:
                        # rectangle: self.x, self.y, self.width, self.height
                        # width: 1
                        # joint: 'miter'
                        # cap: 'none'
                        points: self.pos[0] , self.pos[1], self.pos[0] + self.size[0] * 0.85, self.pos[1]

                Label:
                    size_hint_x: None
                    width: '5dp'
                
                TextInput:
                    size_hint: 0.8, 1
                    padding: 0, 4
                    id: shelf_title_input
                    multiline: False
                    # focus: True
                    background_active: ''
                    background_color: 1, 1, 1, 1
                    background_disabled_normal: ''
                    background_normal: ''
                    font_size: 15
                    foreground_color: 0, 0, 0, 1
                    hint_text: 'Add new shelf...'

                Button:
                    id: add_btn
                    background_normal: ''
                    background_color: 1, 1, 1, 1
                    size_hint_x: 0.10
                    on_press: shelf_viewer.add_shelf(shelf_title_input.text)

                    Image:
                        source: 'images/add.png'
                        size: add_btn.width * 0.8, add_btn.height * 0.8
                        pos: add_btn.x + add_btn.size[0] * 0.1, add_btn.y + add_btn.size[1] * 0.1
                
                # Label:
                #     size_hint_x: None
                #     width: '5dp'

            Label:
                size_hint_x: None
                width: '5dp'

        Label:
            size_hint_y: 0.025

        ShelfViewer:
            id: shelf_viewer
            size_hint_y: 0.87
            # data: app.data
            # spacing: 800
            # padding: 300, 300
            viewclass: 'ShelfItem'
            # space_x: self.size[0]/3
            # orientation: "vertical"
            RecycleBoxLayout:
                orientation: "vertical"
                default_size: dp(100), dp(50)
                # col_default_width: self.width / 4
                # default_size_hint: None, None
                # size_hint_y: None
                # spacing: dp(2)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height

