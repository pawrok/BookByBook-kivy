#:kivy 2.0
#:import utils kivy.utils
#:import NoTransition  kivy.uix.screenmanager.NoTransition
#:import Factory kivy.factory.Factory

# color palette: #28527a, #8ac4d0, #f4d160, #fbeeac
#FadeTransition

<RootWidget>:
    orientation: 'vertical'

    BoxLayout:
        id: top_panel
        canvas:
            Color:
                rgb: utils.get_color_from_hex('#28527a')
            Rectangle:
                pos: self.pos
                size: self.size
        size_hint_y: 0.07
        Label:
            text: "BookByBook"
            color: utils.get_color_from_hex('#ffffff')
            font_name: 'fonts/KaushanScript-Regular.ttf'
            font_size: '22sp'

    RootScreenManager:
        id: rootmanager

    BoxLayout:
        id: bottommenu
        orientation: 'horizontal'
        size_hint_y: None
        height: '46dp'
        padding: '6dp', '4dp'
        canvas.before:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        canvas.after:
            Color:
                rgba: 0.8, 0.8, 0.8, 0.85
            Line:
                points: self.pos[0], self.pos[1] + self.size[1], self.pos[0] + self.size[0], self.pos[1] + self.size[1]

        BottomButton:
            btn_text: 'Home'
            on_release:
                app.add_home_screen()
                rootmanager.current = 'home'
            btn_source: 'images/home.png'

        BottomButton:
            btn_text: 'Stats'
            on_release:
                app.add_stats_screen()
                rootmanager.current = 'stats'
            btn_source: 'images/diploma.png'

        BottomButton:
            btn_text: 'New'
            on_release:
                app.add_newbook_screen()
                rootmanager.current = 'new'
            btn_source: 'images/add-1.png'

        BottomButton:
            btn_text: 'Wishlist'
            on_release: rootmanager.current = 'wish'
            btn_source: 'images/list-1.png'

        BottomButton:
            btn_text: 'Settings'
            on_release: rootmanager.current = 'settings'
            btn_source: 'images/settings.png'

<BottomButton@Button>:
    btn_text: ''
    btn_source: ''
    background_normal: ''
    background_color: 1, 1, 1, 0

    BoxLayout:
        pos: self.parent.pos
        size: self.parent.size
        orientation: 'vertical'
        Image:
            source: root.btn_source
            size_hint: 1, 0.7
        Label:
            size_hint: 1, 0.3
            text: root.btn_text
            color: 0, 0, 0
            font_size: '13sp'


<RootScreenManager@ScreenManager>:
    id: rootmanager
    size: root.width, root.height
    transition: NoTransition()
    HomeScreen:
    StatsScreen:
    AddScreen:
    WishScreen:
    SettingsScreen:

<HomeButton>:
    background_normal: ''
    background_color: 1, 1, 1, 1
    background_down: ''
    color: 0, 0, 0, 1
    font_size: '17sp'
    canvas:
        Color:
            rgba: root.line_color
        Line:
            points: root.pos[0] + 10, root.pos[1], root.pos[0] + root.size[0] - 10, root.pos[1]
            width: 2
            joint: 'miter'
            cap: 'none'


<HomeScreen>:
    name: "home"
    id: home_screen
    middlemanager: middlemanager
    BoxLayout:
        canvas:
            Color:
                rgb: 0.3, 0.3, 0.3
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'vertical'

        BoxLayout:
            padding: '4dp', '2dp', '4dp', '2dp'
            size_hint_y: None
            height: '38dp'
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            BoxLayout:
                orientation: 'horizontal'
                HomeButton:
                    id: books
                    text: 'Books'
                    line_color: utils.get_color_from_hex('#28527a')
                    on_release:
                        middlemanager.current = 'book'; \
                        self.set_underline(utils.get_color_from_hex('#28527a')); \
                        shelf.set_underline([0, 0, 0, 0]); \
                        tags.set_underline([0, 0, 0, 0]); \
                        middlemanager.current_screen.book_scroll.refresh_books()
                HomeButton:
                    id: shelf
                    text: 'Shelves'
                    on_release:
                        middlemanager.current = 'book'; \
                        middlemanager.current_screen.book_scroll.refresh_books(); \
                        middlemanager.current = 'shelf'; \
                        self.set_underline(utils.get_color_from_hex('#28527a')); \
                        books.set_underline([0, 0, 0, 0]); \
                        tags.set_underline([0, 0, 0, 0])
                HomeButton:
                    id: tags
                    text: 'Tags'
                    on_release:
                        middlemanager.current = 'book'; \
                        middlemanager.current_screen.book_scroll.refresh_books(); \
                        middlemanager.current = 'tag'; \
                        self.set_underline(utils.get_color_from_hex('#28527a')); \
                        shelf.set_underline([0, 0, 0, 0]); \
                        books.set_underline([0, 0, 0, 0])

        MiddleScreenManager:
            id: middlemanager


<AddScreen>:
    name: 'new'
    stars_rating: stars_rating
    fav_btn: fav_btn
    read_btn: read_btn
    add_image_btn: add_image_btn
    shelf_input: shelf_input
    tags_input: tags_input

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'vertical'
            padding: '12dp', '4dp'
            canvas:
                Color:
                    rgb: 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            BoxLayout:
                padding: '1dp', '0dp'
                id: topaddbook
                orientation: 'horizontal'
                size_hint_y: 0.25
                AddImageButton:
                    id: add_image_btn
                    background_normal: ''
                    background_color: 1, 1, 1, 1
                    size_hint_x: 0.37
                    on_press: self.add_book_image(root.book_id)
                    Image:
                        allow_stretch: True
                        size: add_image_btn.size
                        source: 'images/cover_blank_plus.png'
                        pos: add_image_btn.pos

                BoxLayout:
                    padding: '5dp', '0dp'
                    size_hint_x: 0.63
                    orientation: 'vertical'
                    canvas:
                        Color:
                            rgb: 1, 1, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size

                    StarsButton:
                        id: stars_rating
                        size_hint_y: 0.45

                    BoxLayout:
                        orientation: 'vertical'
                        size_hint_y: 0.55

                        BoxLayout:
                            orientation: 'horizontal'

                            FavButton:
                                # background_normal: ''
                                # background_color: 1, .9, .9, .99
                                id: fav_btn
                                size_hint: .3, 0.75
                                # pos_hint: {'y': 0.2}
                                background_normal: ''
                                background_color: 1, 1, 1, 1
                                color: 0, 0, 0, 1
                                on_press: self.set_favourite(self.is_fav)

                                Image:
                                    id: img
                                    allow_stretch: True
                                    size: fav_btn.size
                                    source: 'images/heart.png'
                                    pos: fav_btn.pos

                            Label:
                                size_hint_x: 0.05

                            ReadButton:
                                id: read_btn
                                text: 'Read'
                                background_normal: ''
                                background_down: ''
                                background_color: utils.get_color_from_hex('#ffffff')
                                color: utils.get_color_from_hex('#28527a')
                                size_hint: .6, 0.75
                                # width: self.height
                                # pos_hint: {'y': 0.2}
                                on_press: self.set_read_status(self.isRead)
                                canvas.after:
                                    Color:
                                        rgb: utils.get_color_from_hex('#28527a')
                                    Line:
                                        rectangle: self.x, self.y, self.width, self.height
                                        joint: 'miter'
                                        cap: 'none'

                            Label:
                                size_hint_x: 0.05

                        BoxLayout:
                            orientation: 'horizontal'

                            Label:
                                # text: 'Shelf'
                                color: 0, 0, 0, 1

                        #     Label:
                        #         text: 'Select tags'
                        #         color: 0, 0, 0, 1

            ScrollView:
                size_hint_y: 0.75
                GridLayout:
                    id: titleauthorstuff
                    cols: 1
                    size_hint_y: None
                    height: self.minimum_height
                    # adaptive_height: True

                    BookTextInput:
                        id: input_title
                        book_property: root.title
                        label_txt: 'Title'
                        # hint_txt: 'title'

                    BookTextInput:
                        id: input_author
                        book_property: root.author
                        label_txt: 'Author'
                        # hint_txt: 'author'

                    BookTextInput:
                        id: input_category
                        book_property: root.category
                        label_txt: 'Category'
                        # hint_txt: 'category'

                    BookTextInput:
                        id: input_rented_person
                        book_property: root.rented_person
                        label_txt: 'Rented to'
                        # hint_txt: "person's name"

                    BookTextInput:
                        id: input_date_completed
                        book_property: root.date_completed
                        label_txt: 'Date completed'
                        # hint_txt: '0.00.0000'

                    BookTextInput:
                        id: input_pages
                        label_txt: 'Number of pages'
                        book_property: str(root.pages)

                    SelectTextInput:
                        id: shelf_input
                        label_txt: 'Shelves'
                        hint_txt: '(select shelves to add)'

                    SelectTextInputTags:
                        id: tags_input
                        label_txt: 'Tags'
                        hint_txt: '(select tags to add)'

                    BookTextInput:
                        id: input_description
                        text_input_height: '66dp'
                        height: '99dp'
                        label_txt: 'Description and notes'
                        # hint_txt: 'description'
                        book_property: root.description
                    Label:
                        size_hint: 1, None
                        height: '39dp'

    BoxLayout:
        size_hint_y: None
        height: '1dp'

        Button:
            size_hint: 1, None
            background_normal: ''
            background_color: utils.get_color_from_hex('#686c73')
            text: 'Save book'
            height: '40dp'
            color: utils.get_color_from_hex('#ffffff')
            # canvas.after:
            #     Color:
            #         rgb: utils.get_color_from_hex('#28527a')
            #     Line:
            #         rectangle: self.x, self.y, self.width, self.height
            #         joint: 'miter'
            #         cap: 'none'

            on_press:
                root.save_book([
                input_title.ids['text_input'].text,
                input_author.ids['text_input'].text,
                input_category.ids['text_input'].text,
                stars_rating.rating,
                input_rented_person.ids['text_input'].text,
                input_date_completed.ids['text_input'].text,
                input_pages.ids['text_input'].text,
                read_btn.isRead,
                add_image_btn.imageDest,
                fav_btn.is_fav,
                input_description.ids['text_input'].text,
                root.shelves,
                root.tags]); \
                app.add_home_screen(); \
                root.parent.current = 'home'


