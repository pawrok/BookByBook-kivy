# widgets for MiddleScreenManager

<BookItem>:
    # height: root.height
    # width: self.width
    height: self.width * 1.4
    orientation: 'vertical'
    size_hint_y: None
    # size_hint_x: None

    Button:
        id: cover_btn
        background_normal: ''
        background_color: 1, 1, 1, 1
        size_hint_y: 0.8
        on_release: app.open_edit_book(root.book_id)
        Image:
            allow_stretch: True
            size: cover_btn.width, cover_btn.height
            source: root.cover
            pos: cover_btn.x, cover_btn.y


    Label:
        size_hint_y: 0.2
        color: utils.get_color_from_hex('#28527a')
        text: root.title

<ShelfItem>:

    BoxLayout:
        orientation: 'horizontal'
        padding: '5dp'

        Label:
            size_hint_x: None
            width: '5dp'

        BoxLayout:
            canvas.after:
                Color:
                    rgb: utils.get_color_from_hex('#28527a')
                Line:
                    rectangle: self.x, self.y, self.width, self.height
                    joint: 'miter'
                    cap: 'none'
            size_hint_y: None
            height: '30dp'

            Button:
                text: root.shelf
                size_hint_x: 0.7
                background_normal: ''
                background_down: ''
                background_color: utils.get_color_from_hex('#ffffff')
                color: utils.get_color_from_hex('#28527a')
                # on_press: self.set_read_status(self.isRead)

            Label:
                size_hint_x: 0.1
                text: '0'
                color: 0.5, 0.5, 0.5, 1

            BoxLayout:
                size_hint_x: None
                width: '30dp'
                name: 'DropDown'
                __safe_id: [dropdown.__self__]

                Button:
                    id: st_btn
                    size_hint_x: 0.5
                    background_normal: ''
                    background_color: utils.get_color_from_hex('#ffffff')
                    on_release: dropdown.open(self)

                    Image:
                        id: r_img
                        source: 'images/menu.png'
                        size: st_btn.size
                        pos: st_btn.pos

                Widget:
                    on_parent: dropdown.dismiss()
                    size_hint_x: 0.5

                DropDown:
                    id: dropdown

                    Button:
                        id: xx
                        size_hint_y: None
                        height: '30dp'
                        # width: '30dp'
                        background_normal: ''
                        background_color: 1, 1, 1, 1
                        on_release:
                            Factory.RenamePopup().open(); \
                            dropdown.dismiss()

                        Image:
                            source: 'images/edit2.png'
                            size: xx.size
                            pos: xx.pos

                    Button:
                        id: del_btn
                        size_hint_y: None
                        height: '30dp'
                        background_normal: ''
                        background_color: 1, 1, 1, 1
                        on_release:
                            root.parent.parent.remove_shelf(root.shelf); \
                            dropdown.dismiss()

                        Image:
                            source: 'images/delete2.png'
                            size: del_btn.size
                            pos: del_btn.pos


        Label:
            size_hint_x: None
            width: '5dp'


<SmallShelfItem>:

    BoxLayout:
        orientation: 'horizontal'
        # padding: '5dp'
        # size_hint_x: None
        # width: '150dp'

        Label:
            size_hint_x: None
            width: '5dp'

        BoxLayout:
            height: '32dp'
            size_hint_y: None

            canvas.after:
                Color:
                    rgb: utils.get_color_from_hex('#28527a')
                Line:
                    rectangle: self.x, self.y, self.width, self.height
                    joint: 'miter'
                    cap: 'none'

            Button:
                size_hint_x: 0.8
                text: root.shelf
                background_normal: ''
                background_down: ''
                background_color: utils.get_color_from_hex('#ffffff')
                color: utils.get_color_from_hex('#28527a')
                on_release: app.set_shelves(root.shelf)

            Button:
                id: st_btn
                size_hint_x: 0.2
                background_normal: ''
                background_color: utils.get_color_from_hex('#ffffff')
                # on_release: dropdown.open(self)

                Image:
                    id: r_img
                    source: 'images/checkbox_empty.png'
                    size: st_btn.width * 0.5, st_btn.height * 0.5
                    pos: st_btn.x + st_btn.size[0] * 0.25, st_btn.y + st_btn.size[1] * 0.25
# * st_btn.size[0] * 0.1  * st_btn.size[1] * 0.1
        Label:
            size_hint_x: None
            width: '5dp'


<RenamePopup@Popup>:
    auto_dismiss: True
    title: 'Rename'
    rename_input: rename_input
    size_hint: None, None
    size: 180, 200
    pos_hint: {'top': 1}
    separator_color: 110./255, 161./255, 240./255
    # title_font: 'Amatic.ttf'
    # title_size: 32
    background: ''
    background_color: 0, 0, 0, 1

    BoxLayout:
        orientation: 'vertical'

        TextInput:
            id: rename_input
            write_tab: False
            multiline: False
            focus: True
            background_active: ''
            background_color: 0, 0, 0, 1
            background_disabled_normal: ''
            background_normal: ''
            font_size: 15
            foreground_color: 1, 1, 1, 1
            hint_text: 'New collector name...'

        BoxLayout:

            Button:
                background_normal: ''
                background_color: 0, 0, 0, 1

                text: 'Apply'
                on_release:
                    app.rename_tracker(root.tr_id, rename_input.text); \
                    root.dismiss()

            Button:
                background_normal: ''
                background_color: 0, 0, 0, 1

                text: 'Cancel'
                on_release: root.dismiss()
